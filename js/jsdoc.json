{
    "source": {
        "include": ["aleo-wasm/sdk.js"]
    },

    "opts": {
        "encoding": "utf8",
        "readme": "./DOCS.md",
        "destination": "../docs",
        "recurse": true,
        "verbose": true,
        "template": "./node_modules/clean-jsdoc-theme",
        "theme_opts": {
            "default_theme": "dark",
            "static_dir": ["./public"],
            "favicon": "./public/aleo.svg",
            "homepageTitle": "Aleo SDK"
        }
    },
    "markdown": {
        "hardwrap": false,
        "idInHeadings": true 
    }
}
